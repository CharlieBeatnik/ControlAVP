{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Command Processor Schema",
  "type": "object",
  "properties": {
    "DefaultAssembly": {
      "type": "string"
    },
    "DefaultDeviceIndex": {
      "type": "integer"
    },
    "Commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Assembly": {
            "type": "string"
          },
          "DeviceType": {
            "type": "string"
          },
          "DeviceIndex": {
            "type": "integer"
          },
          "Function": {
            "type": "string"
          },
          "Parameters": {
            "type": "object"
          },
          "Description": {
            "type": "string"
          },
          "PostWait": {
            "type": "number"
          }
        },
        "required": [
          "DeviceType",
          "Function",
          "Description"
        ]
      }
    }
  },
  "required": [
    "Commands"
  ]
}