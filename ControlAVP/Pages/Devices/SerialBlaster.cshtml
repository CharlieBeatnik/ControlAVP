@page
@model ControlAVP.Pages.Devices.SerialBlasterModel
@{
    ViewData["Title"] = "SerialBlaster";
}
<h2></h2>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="col-sm-6 pl-0 pr-0">
                <div class="d-flex justify-content-center">
                    <div class="input-group">
                        <input type="text" class="form-control" name="rawHex" value="@ViewData["rawHex"]">
                        <button type="submit" asp-page-handler="BlastRawHex" class="btn badge-primary text-white ml-2">Blast</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>