@page
@model ControlAVP.Pages.Devices.AtenVS0801HModel
@using ControllableDeviceTypes.AtenVS0801HTypes;

@{
    ViewData["Title"] = "Aten VS0801H";
}
<h2></h2>

<form method="post">
    @for (int i = 0; i < Model.DeviceInfoCaches.Count; ++i)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    <strong>@ViewData["Title"]</strong><br />
                    <small>Device #@(i + 1)</small>
                </p>
            </div>
            <div class="panel-body">
                @if (Model.DeviceInfoCaches[i].Available)
                {
                    <div class="col-sm-3">
                        <table class="table table-sm table-borderless table-condensed">
                            <tr>
                                <td>Firmware</td>
                                <td><span class="label label-primary">@Model.DeviceInfoCaches[i].State.Firmware</span></td>
                            </tr>
                            <tr>
                                <td>Input Port</td>
                                <td><span class="label label-success">@Model.DeviceInfoCaches[i].State.InputPort</span></td>
                            </tr>
                            <tr>
                                <td>Output</td>
                                <td><span class="label label-default">@Model.DeviceInfoCaches[i].State.Output</span></td>
                            </tr>
                            <tr>
                                <td>GoTo</td>
                                <td><span class="label label-default">@Model.DeviceInfoCaches[i].State.GoTo</span></td>
                            </tr>
                            <tr>
                                <td>Mode</td>
                                <td><span class="label label-default">@Model.DeviceInfoCaches[i].State.Mode</span></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm-9">
                        <table class="table table-sm table-borderless table-condensed">
                            <tr>
                                <td>Change Input</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port1 class="btn btn-success">1</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port2 class="btn btn-success">2</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port3 class="btn btn-success">3</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port4 class="btn btn-success">4</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port5 class="btn btn-success">5</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port6 class="btn btn-success">6</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port7 class="btn btn-success">7</button>
                                        <button type="submit" asp-page-handler="SetInput" asp-route-deviceindex=@i asp-route-inputport=@InputPort.Port8 class="btn btn-success">8</button>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>


                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Device not found, is it turned on?
                    </div>
                }
            </div>
        </div>
    }
</form>