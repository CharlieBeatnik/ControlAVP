@page
@model IndexModel
@{
    ViewData["Title"] = "ControlAVP";
}

@Html.AntiForgeryToken()

<form method="post">
    <div class="container-fluid">
        @{
            int commandInfosCount = Model.CommandInfos.Count;
            const int numColumns = 3;
        }

        @for (int i = 0; i < commandInfosCount; ++i)
        {
            if (i % numColumns == 0)
            {
                @:<div class="row">
            }

            <div class="col-md-3">
                <button type="submit" asp-page-handler="CommandProcessorExecute" asp-route-fileFullName=@Model.CommandInfos[i].JsonPath class="btn btn-light border">
                    @Model.CommandInfos[i].Name
                    @*<img src="@Model.CommandInfos[i].ImagePath" class="img-fluid"/>*@
                </button>
            </div>

            if (i % numColumns == numColumns-1)
            {
                @:</div>
            }
        }
    </div>
</form>
